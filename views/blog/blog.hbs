{{#article}}
<section class="field">
  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-left">
            
          <figure class="image is-48x48">
            <img src="https://loremflickr.com/320/240?random={{id}}" />
          </figure>
        </div>
        <div class="media-content">
          <a id="url" href="/blogs/{{id}}">
              <p class="title is-4">{{tittle}}</p>
          </a>
        </div>
        <form method="POST" action="/blogs/{{id}}">
  {{/article}}
        {{#if user}}
          <button class="delete is-large" id="deleteItem"></button>
        {{/if}}
        </form>
      </div>
      <div class="content">
        {{#article}}
        {{content}}
        {{/article}}
        <br>
      {{#article}}
        <span class="tag is-rounded">Author 👉🏼 {{author.name}}</span>
      {{/article}}
      {{#if user}}
        {{#if published}}
        <span class="tag is-primary is-rounded">Published</span>
        {{else}}
        {{!-- <span class="tag is-rounded is-warning">Draft</span> --}}
        <span class="tag is-warning is-rounded">Draft</span>
        {{/if}}
      {{/if}}
      </div>
  
      {{#if user}}
        <div class="buttons">
          <a href="/blogs">
            <button class="button is-success is-outlined" id="update">
                <span>👈🏼 Back to blogs</span>
            </button>
          </a>
        </div>
      
        <div class="buttons is-right">
           {{#article}}
          <a href="/blogs/update/{{id}}">
            <button class="button is-primary" id="update">
                <span>Edit 📝 </span>
            </button>
            {{/article}}
          </a>
        </div>
        {{else}}
         <div class="buttons">
          <a href="/">
            <button class="button is-success is-outlined" id="update">
                <span>👈🏼 Back to Home</span>
            </button>
          </a>
        </div>
      {{/if}}

    </div> 
  </div>
</section>




