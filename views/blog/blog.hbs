{{#article}}
<section class="field">
  <div class="card">
    <div class="card-content">
      <div class="media">
        <div class="media-left">
            
          <figure class="image is-48x48">
            <img src="https://loremflickr.com/320/240?random={{id}}" />
          </figure>
        </div>
        <div class="media-content">
          <a id="url" href="/blogs/{{id}}">
              <p class="title is-4">{{tittle}}</p>
          </a>
        </div>
        <form method="POST" action="/blogs/{{id}}">
          <button class="delete is-medium" id="deleteItem"></button>
        </form>
      </div>

      <div class="content">
        {{content}}
        <br>
      <span class="tag is-rounded">Author 👉🏼 {{author.name}}</span>
      </div>
      
      
      {{!-- <button class="button is-success is-outlined" id="back">
        <span>👈🏼 Back to blogs</span>
      </button> --}}

      <div class="buttons">
        <a href="/blogs">
          <button class="button is-success is-outlined" id="update">
              <span>👈🏼 Back to blogs</span>
          </button>
        </a>
      </div>
      
      <div class="buttons is-right">
        <a href="/blogs/update/{{id}}">
          <button class="button is-primary" id="update">
              <span>Edit 📝 </span>
          </button>
        </a>
      </div>

    </div> 
  </div>
</section>
{{/article}}

